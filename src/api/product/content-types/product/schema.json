{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subTitle": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "description": {
      "type": "text",
      "required": true
    },
    "inStock": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "discountPercentage": {
      "type": "integer",
      "required": false
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "brand": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::brand.brand"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "products"
    },
    "sizes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::size.size",
      "mappedBy": "products"
    },
    "colors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::color.color",
      "mappedBy": "products"
    },
    "images": {
      "type": "component",
      "repeatable": true,
      "component": "ui.image",
      "required": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
